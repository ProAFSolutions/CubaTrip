<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.proafsolutions.cubatrip.ui.activity.MenuActivity" android:background="@android:color/background_light"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark" android:layout_marginTop="5sp" />

        <LinearLayout android:id="@+id/parent_chat_layout"
        android:orientation="horizontal" android:layout_height="match_parent" android:layout_width="match_parent">


        <ImageView
            android:id="@+id/image" android:layout_height="250px" android:layout_width="250px" android:src="@mipmap/ic_launcher"/>

        <LinearLayout
            android:id="@+id/chat_layout2"
            android:layout_width="match_parent"  android:layout_height="match_parent"  >
        <TextView android:id="@+id/text"  android:layout_height="wrap_content"
            android:layout_width="wrap_content" android:text="CATEGORIES"
            android:layout_gravity="center_horizontal|center" android:layout_marginLeft="50px"
            android:textSize="20sp"/>

         </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark"  />

        <LinearLayout android:id="@+id/parent_chat_layout2"
            android:orientation="horizontal" android:layout_height="match_parent" android:layout_width="match_parent">


            <ImageView
                android:id="@+id/image2" android:layout_height="250px" android:layout_width="250px" android:src="@mipmap/ic_launcher"/>

            <LinearLayout
                android:id="@+id/chat_layout3"
                android:layout_width="match_parent"  android:layout_height="match_parent"  >
                <TextView android:id="@+id/text2"  android:layout_height="wrap_content"
                    android:layout_width="wrap_content" android:text="REVIEWS"
                    android:layout_gravity="center_horizontal|center" android:layout_marginLeft="50px"
                    android:textSize="20sp"/>

            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorPrimaryDark"  />

    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:id="@+id/linearLayout2" android:orientation="horizontal"></LinearLayout>

    <ImageView
        android:id="@+id/logo"
        android:layout_width="155dp"
        android:layout_height="44dp" android:src="@drawable/logo"
        android:adjustViewBounds="true"
        android:layout_above="@+id/linearLayout2"
        android:layout_centerHorizontal="true" />


</RelativeLayout>

